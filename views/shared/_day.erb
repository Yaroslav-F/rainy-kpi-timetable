<% if locals[:day] %>  
  <div class="col-xs-12 col-md-3">
      <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= locals[:day][0]['day_name'] %>
        </h3>
      </div>
      <div class="panel-body">
        <div class="the-price">
          <h1>
            <%= locals[:day][0]['time_start'][0..-4] %>
          </h1>
        </div>
        <table class="table">
          <% 5.times do |i| %>
            <% if i.even? %>
              <tr>
            <% else %>
              <tr class="active">
            <% end %>
              <td>
                <%= parse_lesson(locals[:day], (i+1).to_s)[0] || "-" %>
                <br>
                <%= parse_lesson(locals[:day], (i+1).to_s)[1] %>
                <br>
                <%= parse_lesson(locals[:day], (i+1).to_s)[2] %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
      <div class="panel-footer">
      </div>
    </div>
  </div>
<% end %>